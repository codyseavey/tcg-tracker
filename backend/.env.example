# TCG Tracker Backend Configuration
# Copy this file to .env and fill in your values

# Database
DB_PATH=./tcg_tracker.db

# Server
PORT=8080

# Frontend (set to serve Vue.js app from Go backend)
# Leave empty to disable frontend serving (API only mode)
FRONTEND_DIST_PATH=../frontend/dist

# Pokemon card data directory (contains pokemon-tcg-data-master)
POKEMON_DATA_DIR=./data

# JustTCG API (for condition-based pricing)
# Get API key from justtcg.com for higher rate limits
# Leave empty for free tier (100 requests/day)
JUSTTCG_API_KEY=
JUSTTCG_DAILY_LIMIT=100

# Legacy: Daily API request limit for Pokemon prices (free tier = 100)
# This is now superseded by JUSTTCG_DAILY_LIMIT but kept for compatibility
POKEMON_PRICE_DAILY_LIMIT=100
