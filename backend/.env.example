# TCG Tracker Backend Configuration
# Copy this file to .env and fill in your values

# Database
DB_PATH=./tcg_tracker.db

# Server
PORT=8080

# Admin Authentication
# Set a secure random key (32+ characters recommended) to enable admin authentication
# When set, collection modification endpoints (add, update, delete) require this key
# If not set, authentication is disabled (all operations allowed - for local dev)
# Generate with: openssl rand -base64 32
ADMIN_KEY=

# Frontend (set to serve Vue.js app from Go backend)
# Leave empty to disable frontend serving (API only mode)
FRONTEND_DIST_PATH=../frontend/dist

# Pokemon card data directory (contains pokemon-tcg-data-master)
POKEMON_DATA_DIR=./data

# JustTCG API (for condition-based pricing)
# Get API key from justtcg.com
# For production: Set via CI/CD secrets, local dev should leave empty
# API provides: condition-based prices (NM, LP, MP, HP, DMG) 
#               and printing variants (Normal, Foil, 1st Edition, Reverse Holofoil)
#
# Free tier:  100 requests/day, 10 req/min, 20 cards/request
# Paid tier: 1000 requests/day, 50 req/min, 100 cards/request
JUSTTCG_API_KEY=
JUSTTCG_DAILY_LIMIT=1000

# Optional: pre-sync TCGPlayerIDs for Pokemon sets on startup
# Set to "true" to run a background sync 5s after boot (uses API quota)
SYNC_TCGPLAYER_IDS_ON_STARTUP=false
